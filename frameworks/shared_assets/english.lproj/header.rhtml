<% content_for :header do %>
<div id="base">
<header>
  <% link_to :href => "http://www.sproutcore.com#{ sc_target(:home) }", :current => false do %>
    <img src="<%= sc_static 'header-logo' %>" id="header-logo" alt="SproutCore Logo">
  <% end %>
  
  <ul id="header-menu">
    <li><%= link_to loc('_Home'), :href => "http://www.sproutcore.com#{ sc_target(:home) }" %></li>
    <li><%= link_to loc('_Download'), :href => 'http://wiki.sproutcore.com/Abbot-Setting+Up' %></li>
    <li><%= link_to loc('_Wiki'), :href => 'http://wiki.sproutcore.com' %></li>
    <li><%= link_to loc('_Screencasts'), :href => 'http://screencasts.sproutcore.com' %></li>
    <li><%= link_to loc('_Blog'), :class => (config.blog_current ? 'current' : ''), :href => 'http://blog.sproutcore.com' %></li>
    <li><a href="javascript:;" id="select_language"><img class="flag" src="<%= sc_static("flags/#{language}") %>"></a></li>
  </ul>
  
</header>
<% # used to draw the white page background %>
<div id="body-page">&nbsp;</div>
<article id="body-article">
<% end %>